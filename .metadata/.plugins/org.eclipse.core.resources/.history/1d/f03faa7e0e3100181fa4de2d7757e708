<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dataSource"
		class="org.apache.commons.dbcp2.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" ref="${jdbc.driverClassName}"></property>
		<property name="url" ref="${jdbc.url}"></property>
		<property name="username" ref="${jdbc.username}"></property>
		<property name="password" ref="${jdbc.password}"></property>
	</bean>
</beans>
